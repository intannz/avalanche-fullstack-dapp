{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": [
    "./scripts",
    "./test",
    "./contracts",
    "./helpers",
    "hardhat.config.ts"
  ],
  "exclude": ["node_modules"]
}
